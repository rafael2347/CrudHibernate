<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.pojos.EntidadCliente" table="cliente" schema="mi_base_de_datos">
        <id name="nif">
            <column name="nif" sql-type="char(9)" length="20"/>
        </id>
        <property name="nombre">
            <column name="nombre" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="apellido">
            <column name="apellido" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>